<%- include components/header.ejs %>
<div class="container">

	<div class="jumbotron text-center">
		<h1></span>Create a New Quiz</h1>
	</div>	

	<!-- Start Form -->
	<form role="form" method="POST" action="/quiz/new">

		<div class="row">

			<!-- Title -->
			<div class="form-group col-md-6">
				<label for="quizTitle">Quiz Title</label>
				<input type="text" class="form-control" id="quizTitle" name="quizTitle" placeholder="Quiz Title..."/>
			</div>

			<!-- Scoring Type -->
			<!-- TODO: implement other scoring types -->
			<div class="form-group col-md-6">
				<label for="quizType">Scoring Type</label>
				<select class="form-control" id="quizType" name="quizType">
					<option value="mostcommon">Most Common</option>
				</select>
			</div>

		</div>

		<div class="row">

			<!-- Start Text -->
			<div class="form-group col-md-6">
				<label for="quizStartText">Start Text</label>
				<input type="text" class="form-control" id="quizStartText" name="quizStartText" placeholder="Start Text..."/>
			</div>

			<!-- End Text -->
			<div class="form-group col-md-6">
				<label for="quizRestartText">Restart Text</label>
				<input type="text" class="form-control" id="quizRestartText" name="quizRestartText" placeholder="Restart Text..."/>
			</div>
		</div>

		<!-- Description -->
		<div class="form-group">
			<label for="quizDescription">Quiz Description</label>
			<textarea id="quizDescription" class="form-control" name="quizDescription" placeholder="Quiz Description..."></textarea>
		</div>

		<!-- Questions -->
		<div id="questionsContainer" class="questions-container">
			<input type="hidden" id="numQuestions" name="numQuestions" value="1">

			<div class="question">
				<div class="form-group">
					<label for="quizQuestion1">Question</label>
					<input type="text" class="form-control" id="quizQuestion1" name="quizQuestion1" placeholder="Question Text...">
				</div>

				<div class="question-answers">
					<div class="row">
						<div class="form-group col-md-3">
							<div class="input-group">
								<span class="input-group-addon">A</span>
								<input type="text" class="form-control" id="quizQuestion1-a" name="quizQuestion1-a" placeholder="Answer..."/>
							</div>
						</div>
						<div class="form-group col-md-3">
							<div class="input-group">
								<span class="input-group-addon">B</span>
								<input type="text" class="form-control" id="quizQuestion1-b" name="quizQuestion1-b" placeholder="Answer..."/>
							</div>
						</div>
						<div class="form-group col-md-3">
							<div class="input-group">
								<span class="input-group-addon">C</span>
								<input type="text" class="form-control" id="quizQuestion1-c" name="quizQuestion1-c" placeholder="Answer..."/>
							</div>
						</div>
						<div class="form-group col-md-3">
							<div class="input-group">
								<span class="input-group-addon">D</span>
								<input type="text" class="form-control" id="quizQuestion1-d" name="quizQuestion1-d" placeholder="Answer..."/>
							</div>
						</div>
					</div>
				</div>
			</div>

			<a id="addQuestionButton" class="btn btn-default"><span class="fa fa-plus"></span> Add Question</a>
		</div>

		<!-- Results -->
		<div id="resultsContainer" class="results-container">
			<input type="hidden" id="numResults" name="numResults" value="1" />

			<div class="result">

				<div class="row">
					<div class="form-group col-md-8">
						<label for="quizResult1">Result Title</label>
						<input type="text" class="form-control" id="quizResult1" name="quizResult1" placeholder="Result Title..."/>
					</div>

					<div class="form-group col-md-4">
						<label for="quizResult1-value">Corresponding Answer</label>
						<select class="form-control" id="quizResult1-value" name="quizResult1-value">
							<option value="a">A</option>
							<option value="b">B</option>
							<option value="c">C</option>
							<option value="d">D</option>
						</select>
					</div>
				</div>

				<div class="form-group">
					<label for="quizResult1-description">Description</label>
					<textarea class="form-control" id="quizResult1-description" name="quizResult1-description" placeholder="Result Description..."></textarea>
				</div>
			</div>

			<a id="addResultButton" class="btn btn-default"><span class="fa fa-plus"></span> Add Result</a>
		</div>

		<input type="submit" value="Save Quiz" class="btn btn-lg btn-primary pull-right" />

	</form><!-- End Form -->

</div>

<script type="text/javascript" src="/js/CreateQuiz.js"></script>

<%- include components/footer.ejs %>
